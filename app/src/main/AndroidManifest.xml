<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cizmarcristian">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- we need to set android:usesCleartextTraffic="true" because the free version of the API
    doesn't support HTTPS, it only supports HTTP-->
    <application
        android:name="com.example.cizmarcristian.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.cizmarcristian.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyAppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>